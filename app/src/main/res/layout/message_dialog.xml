<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/icon_image"
        android:layout_toRightOf="@+id/icon_image"
        android:text="Some test text that is very long and meaningful and fills up most of the textview."
        android:textSize="18sp"
        android:textStyle="normal|bold"/>

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/thumb_up"
        tools:ignore="ContentDescription,RtlHardcoded"/>

    <Button
        android:id="@+id/dialogButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/icon_image"
        android:layout_alignStart="@+id/icon_image"
        android:layout_below="@+id/icon_image"
        android:layout_marginTop="23dp"
        android:paddingRight="5dp"
        android:text="Dismiss"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded,RtlSymmetry"/>

</RelativeLayout>